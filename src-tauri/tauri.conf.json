{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Valorant Match Menubar",
  "version": "0.1.0",
  "identifier": "com.example.valorant-menubar",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5174",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "Valorant Live Matches",
        "url": "index.html",
        "width": 420,
        "height": 260,
        "minWidth": 380,
        "minHeight": 200,
        "maxHeight": 360,
        "resizable": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visibleOnAllWorkspaces": true,
        "transparent": false,
        "create": false,
        "focusable": true,
        "acceptFirstMouse": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  },
  "plugins": {}
}

